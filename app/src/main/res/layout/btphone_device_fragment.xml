<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:paddingLeft="15dp"
              android:paddingBottom="5dp"
              android:orientation="vertical">

				<TextView
								android:id="@+id/tv_seach_devices"
								android:layout_width="455dp"
								android:layout_height="wrap_content"
								android:paddingBottom="10dp"
								android:paddingTop="25dp"
								android:paddingLeft="60dp"
								android:gravity="left|center_vertical"
								android:nextFocusDown="@+id/lv_phone_device"
								android:nextFocusUp="@id/tv_seach_devices"
								android:nextFocusLeft="@id/tv_seach_devices"
								android:nextFocusRight="@id/tv_seach_devices"
								android:singleLine="true"
								android:text="@string/btphone_search_start"
								android:textColor="@color/white"
								android:textSize="@dimen/text_size_xxlarge"/>

				<TextView
								android:id="@+id/tv_tip"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:paddingBottom="10dp"
								android:paddingTop="25dp"
								android:paddingLeft="15dp"
								android:gravity="left|center_vertical"
								android:singleLine="true"
								android:text="known device"
								android:textColor="@color/white"
								android:textSize="@dimen/text_size_xxlarge"/>

				<ListView
								android:id="@+id/lv_phone_device"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:background="@color/transparent"
								android:divider="@color/transparent"
								android:dividerHeight="0dp"
								android:listSelector="@drawable/bg_menu_normal"
								android:nextFocusDown="@id/lv_phone_book"
								android:nextFocusLeft="@id/lv_phone_book"
								android:nextFocusRight="@id/lv_phone_book"
								android:nextFocusUp="@id/tv_seach_devices"
								android:scrollbarStyle="outsideInset"
								android:scrollbarThumbVertical="@drawable/ic_listview_scrollbar"
								android:scrollbarTrackVertical="@drawable/ic_listview_scroll_bg"
								android:scrollbars="vertical"/>
</LinearLayout>
