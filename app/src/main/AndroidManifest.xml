<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.c2p.c2pbtphone"
    android:sharedUserId="android.uid.system">


    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BROADCAST_STICKY"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- Get permission to read serial port -->
    <uses-permission android:name="android.permission.SERIAL_PORT"/>
    <!-- 监听开机广播权限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name="com.c2p.c2pbtphone.bt.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.C2pBtPhone"
        tools:targetApi="31">
       <!-- <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>-->





        <activity
            android:name="com.c2p.c2pbtphone.bt.ui.btphone.BTPhoneMainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="adjustPan|adjustResize|stateHidden"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.APP_PHONE"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.lf.BTPHONE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.c2p.c2pbtphone.bt.ui.btmusic.BTMusicActivity"
            android:launchMode="singleTask"
            android:theme="@style/FullTransparentTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.lf.BTMUSIC"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.c2p.c2pbtphone.bt.ui.btphone.callin.PhoneInComingActivity"
            android:launchMode="singleTask"
            android:theme="@style/FullTransparentTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="com.lingfei.android.PhoneInComingActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.c2p.c2pbtphone.bt.ui.btphone.widget.CallOutDialogActivity"
            android:launchMode="singleTask"
            android:theme="@style/FullTransparentTheme">


        </activity>

        <activity
            android:name="com.c2p.c2pbtphone.bt.ui.btphone.widget.DeleteDeviceDialogActivity"
            android:launchMode="singleTask"
            android:theme="@style/FullTransparentTheme">

        </activity>



        <!--Wenqiang Bluetooth Service-->
        <service
            android:name="com.c2p.c2pbtphone.bt.ui.btphone.service.BTPhoneService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.lingfei.android.main.ui.btphone.service.BTPhoneService"></action>
            </intent-filter>
        </service>

        <receiver
            android:name="com.lingfei.android.business.receiver.MainBootReceiver"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.android.restartbtphoneservice"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.android.lf.bt.music.broadcastreceiver"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>